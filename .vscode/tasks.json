{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SFML Game",
            "type": "shell",
            "command": "clang++",
            "args": [
                "main.cpp",
                "-o", "sfml_test",
                "-I/opt/homebrew/Cellar/sfml/3.0.2/include",
                "-L/opt/homebrew/Cellar/sfml/3.0.2/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
